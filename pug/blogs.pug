extends components/templates.pug

block content
  main.blogs-container
    //- blog highlighted
    section.primary-blog
      //- left section 
      h3.primary-blog__category Noticias
      .primary-blog__left
        figure.primary-blog__thumbnail
          img(src="assets/img/main-news-img.png", alt="thumbnail")
      //- right section 
      .primary-blog__info
        h2.primary-blog__title Título del Blogpost
        p.primary-blog__content Lorem ipsum dolor sit amet consectetur adipisicing elit. Similique numquam ipsam dignissimos nesciunt consectetur.
        a.blogs-button(href="#") Leer más
    //- all blogs
    section.blogs
      h3.blogs__title Últimos posts
      //- mixins
      +blog-post("1.png", "Titulo del post")
      +blog-post("2.png", "Titulo del post")
      +blog-post("3.png", "Titulo del post")
      +blog-post("2.png", "Titulo del post")
      +blog-post("3.png", "Titulo del post")
      +blog-post("1.png", "Titulo del post")
  //- footer
  include components/footers.pug